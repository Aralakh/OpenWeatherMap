<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/forecast_date"/>

    <TextView
        android:id="@+id/forecast_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/forecast_high"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/forecast_date"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/forecast_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/forecast_min"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/forecast_high"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/forecast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/forecast_low"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>